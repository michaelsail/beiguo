@import '/app.wxss';
.goods-list{
  display: flex;
  flex-wrap: wrap;
  /* padding-left: 30rpx; */
  margin-top:0;
   /* justify-content: space-between;   */
}
.goods{
  flex: none;
  width: 370rpx;
  display: flex;
  flex-direction: column;
  /* margin-left: 10rpx; */
  margin-top:5rpx;
  
}
.goods:nth-child(2n){
  margin-left: 10rpx;
}
.img{
  width: 370rpx;
  height: 278rpx;
  flex: none;
}
.imgItem{
  width: 100%;
  height: 100%;
}
.des{
  flex: auto;
  padding: 20rpx 10rpx;
  background-color: white;
}
.title{
  font-size: 32rpx;
  line-height: 40rpx;
  height: 80rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}
.price{
  display: flex;
  align-items: center;
}
.sale{
  flex: none;
  font-size: 32rpx;
  line-height: 34rpx;
}
/* .sale::before{
  content: '￥';
} */
.origin{
  flex: auto;
  font-size: 24rpx;
  line-height: 24rpx;
  text-decoration: line-through;
  white-space: nowrap;
  text-overflow: ellipsis;
  overflow: hidden;
}
.origin::before{
  content: '￥';
}

.container {
    height: 92rpx;
    overflow: hidden;
    border-bottom: solid 1rpx #ebebeb;

}

scroll-view {
    width: 100%;
    white-space: nowrap;
    border-top: solid 1rpx #f5f5f5;
    padding-left: 3rpx;
}

.tab {
    display: inline-block;
    margin: 0 30rpx;
    /* padding: 24rpx 0; */
    font-size: 32rpx;
    line-height:88rpx;
    height:86rpx;
    text-align: center;

}

.tab.selected {
    color: #1f9ffa;
    /* box-shadow: 0 -8rpx 0 -2rpx #FFC50D inset; */
     /* border-radius: 6rpx;  */
    border-bottom: 4rpx solid #1f9ffa;
}